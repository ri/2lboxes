!!! 5
%html
  %head
    %title 2lboxes

    %link{href: "/css/bootstrap.css", rel: "stylesheet", media: "all"}

    %script{src: "/js/vendor/jquery-1.5.js"}
    %script{src: "/js/vendor/underscore-1.1.6.js"}
    %script{src: "/js/vendor/backbone-0.5.3.js"}
    %script{src: "/js/vendor/jquery-ui-1.8.16.custom.min.js"}
    %script{src: "/js/vendor/jquery.isotope.min.js"}
    %script{src: "/js/vendor/bootstrap-modal.js"}

    %script{src: "/js/bootstrap.js"}
    %script{src: "/js/app/toolboxes.js"}
    %script{src: "/js/app/classes/AppRouter.js"}
    %script{src: "/js/app/classes/AppView.js"}
    %script{src: "/js/app/classes/LinkView.js"}
    %script{src: "/js/app/classes/LinksView.js"}
    %script{src: "/js/app/classes/TrayView.js"}
    %script{src: "/js/app/classes/ToolboxView.js"}
    %script{src: "/js/app/classes/ToolboxesView.js"}
    %script{src: "/js/app/classes/Link.js"}
    %script{src: "/js/app/classes/Tray.js"}
    %script{src: "/js/app/classes/Toolbox.js"}
    %script{src: "/js/app/classes/Links.js"}
    %script{src: "/js/app/classes/Trays.js"}
    %script{src: "/js/app/classes/Toolboxes.js"}

    %script#links-view-template{type: "text/template"}
      .well
        %h3 Drop links into toolboxes
        %ul

    %script#link-view-template{type: "text/template"}
      %img.thumb{src: 'http://placedog.com/60/60?{{ id }}'}
      %a.link-title{href: "{{ url }}"} {{ title }}
      .btns
        %a.btn.move Move
        %a.btn.copy Copy

    %script#toolbox-view-template{type: "text/template"}
      .top
        .handle
      %h2 {{ label }}
      %ul.trays

    %script#tray-view-template{type: "text/template"}
      %a {{ label }}

  %body
    .topbar
      .fill
        .container-fluid
          %a{href: "/", class: "brand"} 2lBoxes

          .top-actions
            %a#add-link.btn Add Link
            %a#add-toolbox.btn Add Toolbox

    #main.container-fluid

